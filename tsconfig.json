{
  "compilerOptions": {
      "target": "ES2021",
      "module": "CommonJS",
      "sourceMap": true,
      "noImplicitAny": true,
      "strict": true,
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "esModuleInterop": true,
      "outDir": "./dist",
      "declaration": true
  },
  "include": [
      "src/**/*.ts"
  ],
  "exclude": [
      "node_modules",
      "./dist",
      "./src/**.test.ts"
  ],
}